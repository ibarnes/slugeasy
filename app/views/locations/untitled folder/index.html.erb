<h1>Listing locations</h1>

<table>
  <tr>
    <th>Title</th>
  </tr>

<% @locations.each do |locations| %>
  <tr>
    <td><%=h locations.title %></td>
    <td><%= link_to 'Show', locations %></td>
    <td><%= link_to 'Edit', edit_location_path(locations) %></td>
    <td><%= link_to 'Destroy', locations, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New locations', new_location_path %>